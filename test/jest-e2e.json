{
  "rootDir": "../",
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/common/(.*)$": "<rootDir>/libs/common/src/$1",
    "^@app/common$": "<rootDir>/libs/common/src",
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
